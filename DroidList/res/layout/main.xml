<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">"
    <Spinner
        android:id="@+main/splista"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/texto_lista"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:id="@+main/layout">"
        <ListView
            android:id="@+main/lista"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:smoothScrollbar ="false"
            android:drawSelectorOnTop="false"
            android:scrollingCache="true"
            android:cacheColorHint="#00000000"
            android:layout_weight="1"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content">"
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content">"
            <TextView
                android:id="@+main/txlista"
                android:layout_width="100px"
                android:layout_height="14px"
                android:text=""
                android:textSize="12sp"
                android:gravity="left"
                android:layout_weight="2"/>
            <TextView
                android:id="@+main/txcarrinho"
                android:layout_width="100px"
                android:layout_height="14px"
                android:text=""
                android:textSize="12sp"
                android:gravity="left"
                android:layout_weight="2"/>
            </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              android:orientation="horizontal"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content">"
                    <Button
                        android:id="@+main/btprod"
                        android:layout_width="100px"
                        android:layout_height="50px"
                        android:layout_weight="2"
                        android:text="@string/label.adicionaProduto"/>
                    <Button
                        android:id="@+main/btlimpar"
                        android:layout_width="100px"
                        android:layout_height="50px"
                        android:layout_weight="2"
                        android:text="@string/label.limpar"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>